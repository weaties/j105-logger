CAN_INTERFACE=can0
CAN_BITRATE=250000
DB_PATH=data/logger.db
LOG_LEVEL=INFO
DATA_SOURCE=signalk
SK_HOST=localhost
SK_PORT=3000
# Audio recording (Gordik 2T1R or any USB Audio Class device)
# AUDIO_DEVICE=Gordik
AUDIO_DIR=data/audio
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=1
# Audio transcription
WHISPER_MODEL=base
# Speaker diarisation — requires free HF account + accepted model terms
# See: huggingface.co/pyannote/speaker-diarization-3.1
# HF_TOKEN=hf_...
# Photo notes
NOTES_DIR=data/notes
# Authentication (magic-link invite tokens)
# AUTH_DISABLED=true          # set to bypass auth entirely (useful for local/Tailscale-only use)
AUTH_SESSION_TTL_DAYS=90      # how long session cookies stay valid
# ADMIN_EMAIL=you@example.com # if set, a user with this email is auto-created as admin on startup
# Web interface (race marker)
WEB_HOST=0.0.0.0
WEB_PORT=3002
# WEB_PIN=
# Tailscale Funnel public base URL (set automatically by setup.sh when Tailscale is connected)
# When set, Grafana deep-links resolve to PUBLIC_URL/grafana and a Signal K link appears.
# Leave unset for LAN-only / local-dev use.
# PUBLIC_URL=https://corvopi.<tailnet>.ts.net

# Grafana dashboard links
# When PUBLIC_URL is set, GRAFANA_URL is ignored — links use PUBLIC_URL/grafana instead.
GRAFANA_URL=http://corvopi:3001
GRAFANA_DASHBOARD_UID=j105-sailing
# InfluxDB — required only for system health metrics; omit if not using InfluxDB
# INFLUX_URL=http://localhost:8086
# INFLUX_TOKEN=
# INFLUX_ORG=j105
# INFLUX_BUCKET=signalk
